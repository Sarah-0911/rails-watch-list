<h2><%= @list.name %></h2>
<% @list.movies.each do |movie|%>
  <div>
    <h4><%= movie.title %></h4>
    <p><%= movie.overview %></p>
    <p><%= movie.poster_url %></p>
  </div>
<% end %>

<p><%= link_to "Add a movie to the list", new_list_bookmark_path(@list) %></p>
<% @list.bookmarks.each do |bookmark| %>

<p><%= bookmark.movie.title %> - <%= bookmark.comment %> <%= link_to "Delete",
bookmark_path(bookmark),
data: {turbo_method: :delete, turbo_confirm: "Delete #{bookmark.movie.title}?"} %></p>
<% end %>
